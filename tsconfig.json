{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2019",
    "module": "ES2020",
    "moduleResolution": "Node16",
    "lib": [
      "ES2019",
      "dom"
    ],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist",
    "pretty": true,
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "importHelpers": true
  },
  "include": [
    "src"
  ]
}
